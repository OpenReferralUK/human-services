@page
@model IndexModel
@{ 

    ViewData["Title"] = "Home page";
}
    
    <div>
        <h1 class="display-4 mb-5">Export your Service Directory to Google Sheets</h1>
        <div class="row">
            <div class="col-sm">
                <div class="panel panel-primary">
                    <p>The Service Exporter allows providers to easily view the entire contents of a Service Directory in a Google Spreadsheet form. With derived columns to show how services relate to organisations, service types etc.</p>
                    <div class="panel-heading">
                        <h3 class="panel-title">Example base URL's</h3>
                    </div>

                    <div class="panel-body">
                        <ol>
                            <li><a id="serviceDirectory1" href="javascript:$('.DemoBaseURL').val($('#serviceDirectory1').html())">https://outpost-api-service.herokuapp.com/api/v1/</a></li>
                            <li><a id="serviceDirectory2" href="javascript:$('.DemoBaseURL').val($('#serviceDirectory2').html())">https://api.porism.com/ServiceDirectoryServiceBlackburn/</a></li>
                            <li><a id="serviceDirectory3" href="javascript:$('.DemoBaseURL').val($('#serviceDirectory3').html())">https://lgaapi.connecttosupport.org/</a></li>
                        </ol>
                    </div>
                </div>
            </div>
            <div class="col-sm">
                <form method="get" asp-page="/Export">
                    <div class="form-group">
                        <label for="BaseUrl">Base URL</label>
                        <input class="form-control DemoBaseURL" type="url" id="BaseUrl" name="BaseUrl"/>
                    </div>
                    @if (TempData["MsgText"] != null )
                    {
                        <div class="alert alert-danger">@TempData["MsgText"]</div>
                    }

                        <input type="submit" value="Export" class="btn btn-primary" />
                    </form>
            </div>
        </div>
    </div>
